- provide :title, 'Contact Me'

.col-sm-8.col-sm-offset-2
  = form_for @contact_message, html: { role: "form", onsubmit: "return validate_contact_message();" } do |f|
    .form-group
      = f.label :name, "Name*", class: "control-label"
      = f.text_field :name, class: "input-medium form-control", autofocus: true

    .form-group
      = f.label :email, "Email*", class: "control-label"
      = f.text_field :email, class: "form-control"

    .form-group
      = f.label :message, class: "control-label"
      = f.text_area :message, rows: 7, class: "form-control"

    = f.submit "Submit", class: "btn btn-primary btn-block"
